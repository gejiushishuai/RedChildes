<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/ll_timeShopingItem"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_timeShopingItem_icon"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_timeShopingItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="加粒胶囊加粒胶囊加粒胶囊"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_timeShopingItem_price"
            android:layout_width="48dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:text="￥68.00"
            android:textColor="@color/backgroundDarkGrey"
            android:background="@mipmap/blackline"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/backgroundDarkGrey"
                android:text="限时特价:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_timeShopingItem_limitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="￥68.00"
                android:textColor="@color/colorRed"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="剩余时间:"
                android:textColor="@color/colorRed"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_timeShopingItem_leftTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="03：30：15"
                android:textColor="@color/colorRed"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/ib_timeShopingItem_detial"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:background="@mipmap/arrow"/>

        <Button
            android:id="@+id/bt_timeShopingItem_goToBuy"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:text="立即抢购"
            android:textColor="#fff"
            android:background="@mipmap/product_detail_shop_normal" />
    </RelativeLayout>

</LinearLayout>