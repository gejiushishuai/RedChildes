<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_list_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="收货地址:"
                android:textSize="20sp" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/pay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:text="卫冕"
                android:textSize="18sp" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/pay_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingLeft="20dp"
                android:text="138XXXXXXXX"
                android:textSize="18sp" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_pay_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:lines="1"
                android:paddingLeft="20dp"
                android:text="大撒撒反对发射点fgggdddddgdgdfgdgdgd仿实打实"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_local"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/prod_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/order_list_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="支付方式:"
                android:textSize="20sp" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_pay_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingLeft="20dp"
                android:text="货到付款"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/iv_pay_pay"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/prod_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_list_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="送货方式:"
                android:textSize="20sp" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_pay_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingLeft="20dp"
                android:text="的撒大苏打实打实大苏打盛大的撒"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_pay_style"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/prod_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/order_list_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="送货方式:"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_pay_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/order_list_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="索要发票:"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_pay_paick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人/服装"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>